<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_reservation_box"
        android:elevation="2dp"
        android:paddingTop="@dimen/padding_reservation_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/book_reservation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/padding_reservation_box"
            android:fontFamily="@font/crete_round"
            android:text="titolo, sport, hh:mm-hh:mm"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <ImageButton
            android:id="@+id/bookReservationDetails"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/padding_reservation_box"
            app:srcCompat="@drawable/arrow_details_book_reservation"
            android:backgroundTint="@color/secondary_green"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="32dp"
            app:dividerColor="@color/primary_green"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>